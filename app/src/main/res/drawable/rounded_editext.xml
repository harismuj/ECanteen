<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer untuk outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:color="@color/red"
                android:width="2dp" /> <!-- Lebar outline -->
        </shape>
    </item>

    <!-- Layer untuk latar belakang -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set warna latar belakang -->
            <corners android:radius="8dp" /> <!-- Set sudut yang dibulatkan -->
        </shape>
    </item>
</layer-list>

